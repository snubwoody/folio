---
import Button from "@components/Button.astro";
import Screenshot from "@assets/Screenshot.png";
import Image from "astro/components/Image.astro";
---

<section>
    <div class="info-section">
        <h1>Folio</h1>
        <p>
            A free, privacy-focused budgeting app. Track expenses, manage budgets, and
            analyze your spending all while keeping your financial data private and under your complete control.
        </p>
        <Button href="#downloads">
            <p>Download Folio</p>
        </Button>
    </div>
    <Image src={Screenshot} alt="App screenshot" class="max-sm:hidden"/>
</section>

<style>
	section{
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 64px;
		padding: 88px 64px;

        @media (width < 640px) {
            padding: 32px;
        }
	}

	img{
		width: 100%;
		max-width: 1000px;
		box-shadow: var(--shadow-purple-md);
		border-radius: var(--radius-lg);
	}

	.info-section{
		display: flex;
		flex-direction: column;
		gap: 24px;
		align-items: center;

		p{
			max-width: 75ch;
			text-align: center;
		}
	}
</style>