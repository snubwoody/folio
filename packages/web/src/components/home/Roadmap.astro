---
import {Check} from "@lucide/astro";

interface RoadmapItem {
    title: string
    checked: boolean
}

const items: RoadmapItem[] = [
    {title:"User analytics",checked: true},
    {title:"Vaults",checked: true},
    {title:"Sync across devices",checked: false},
    {title:"Recurring transactions",checked: false},
]
---

<section class="flex flex-col items-center p-10 gap-5">
    <div class="grid place-items-center gap-1.5">
        <h4>Roadmap</h4>
        <p class="max-w-[50ch] text-center">
            Folio is currently in beta, youâ€™re support is highly appreciated. Submit a bug report or feature request.
        </p>
    </div>
    <ul class="space-y-2">
        {items.map(item =>
            <li class="flex items-center gap-1">
                <div data-checked={item.checked} class="check-circle">
                    {item.checked ? <Check size="16"/> : null}
                </div>
                <p>{item.title}</p>
            </li>
        )}
    </ul>
</section>

<style>
    .check-circle{
        width: 24px;
        aspect-ratio: 1;
        display: grid;
        place-items: center;
        border: 1px solid transparent;
        border-radius: var(--radius-full);

        &[data-checked="true"]{
            color: var(--color-white);
            background-color: var(--color-purple-500);
        }

        &[data-checked="false"]{
            background: var(--color-neutral-50);
            border-color: var(--color-neutral-100);
        }
    }
</style>