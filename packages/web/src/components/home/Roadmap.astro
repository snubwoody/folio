---
import { Check } from "@lucide/astro";

interface RoadmapItem {
    title: string
    checked: boolean
}

const items: RoadmapItem[] = [
    { title:"User analytics",checked: true },
    { title:"Dark mode",checked: false },
    { title:"Sync across devices",checked: false },
    { title:"Recurring transactions",checked: false }
];
---

<section class="flex flex-col items-center max-md:px-3 max-md:py-5 md:p-10 gap-2.5">
    <h4>Roadmap</h4>
    <ul class="space-y-2">
        {items.map(item =>
            <li data-observe>
                <div data-checked={item.checked} class="check-circle">
                    {item.checked ? <Check size="16"/> : null}
                </div>
                <p>{item.title}</p>
            </li>
        )}
    </ul>
</section>

<style>
    li{
        display: flex;
        align-items: center;
        gap: 8px;
        opacity: 0;
        transition: all 1s;
        translate: 0 100px;

        &[data-visible="true"]{
            opacity: 1;
            translate: 0;
        }
    }
    .check-circle{
        width: 24px;
        aspect-ratio: 1;
        display: grid;
        place-items: center;
        border: 1px solid transparent;
        border-radius: var(--radius-full);

        &[data-checked="true"]{
            color: var(--color-white);
            background-color: var(--color-purple-500);
        }

        &[data-checked="false"]{
            background: var(--color-neutral-50);
            border-color: var(--color-neutral-100);
        }

    }
</style>